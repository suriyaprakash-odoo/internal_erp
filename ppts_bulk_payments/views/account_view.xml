   	<record id="view_move_form_inherits" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
			<xpath expr="//field[@name='line_ids']/tree/field[@name='credit']" position="after">
				<field name="statement_status"/>
				<button name="remove_check" string="Remove Check" type="object" class="icon-class" icon="fa-exchange" attrs="{'invisible':[('statement_status','=',False)]}" confirm="Warning!     You are about to unreconcile the BRS line.Unreconciling may cause mismatch in the BRS Starting/Ending balance which is already reconciled in BRS. Still do you want to continue?" groups="ppts_imporvements.group_brs_status_reverse"/>
        	</xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="after">
                <field name="date"/>
            </xpath>

          <!--   <xpath expr="//field[@name='line_ids']/tree/field[@name='date_maturity']" position="replace">
                <field name="date_maturity" invisible="1"/>
	      	</xpath> -->
        </field>
        </record>
            
      	<record id="view_move_line_form_inherits" model="ir.ui.view">
      	  <field name="name">account.move.line.form</field>
	      <field name="model">account.move.line</field>
	      <field eval="2" name="priority"/>
	      <field name="inherit_id" ref="account.view_move_line_form"/>
	      <field name="arch" type="xml">
	      	  <xpath expr="//field[@name='date']" position="after">
	      	 	<field name="seq_no"/>
	      	</xpath>
	      </field>
	      </record>

          <record id="view_move_line_form_inherited" model="ir.ui.view">
            <field name="name">account.move.line.tree.inherit</field>
            <field name="model">account.move.line</field>
            <field eval="1" name="priority"/>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='credit']" position="after">
		      	 	<field name="statement_status"/>
		      	</xpath>
            </field>
        </record>	      
	      
