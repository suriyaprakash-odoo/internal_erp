<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!--cron to send mail about the list of newly joined employees -->

		<record id="cron_employee_mail" model="ir.cron">
			<field name="name">Employees Details</field>
			<field name="model_id" ref="model_hr_employee" />
			<field name="state">code</field>
			<field name="code">model.mail_to_hr()</field>
			<field name="interval_number">7</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False" />
		</record>
		
		<record id="overall_tenure_cron" model="ir.cron">
			<field name="name">Overall Tenure</field>
			<field name="active" eval="True" />
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall">0</field>
			<field name="model_id" ref="model_hr_employee" />
			<field name="state">code</field>
			<field name="code">model.overall_tenure()</field>
		</record>
		
		<record id="experience_tenure_cron" model="ir.cron">
			<field name="name">Experience Tenure</field>
			<field name="active" eval="True" />
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall">0</field>
			<field name="model_id" ref="model_hr_employee" />
			<field name="state">code</field>
			<field name="code">model.experience_tenure()</field>
		</record>
	
	</data>
</odoo>
