<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="hr_contract_view_form_inherit" model="ir.ui.view">
	        <field name="name">hr.contract.form</field>
	        <field name="model">hr.contract</field>
	        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
	        <field name="priority">50</field>
	        <field name="arch" type="xml">
	            <xpath expr="//field[@name='trial_date_end']" position="before">
	                <field name="trial_date_start"/>
	            </xpath>
	            <xpath expr="//field[@name='type_id']" position="before">
	                <field name="job_seniority_id"/>
	            </xpath>
	            <xpath expr="//group[@name='duration_group']" position="after">
	                <group name="duration_group" string="Benefits">
	                	<field name="benefits_epf"/>
	                	<field name="benefits_esi"/>
	                	<field name="benefits_medical_policy"/>
	                </group>
	            </xpath>
	            
	            <xpath expr="//label[@for='wage']" position="attributes">
	            	<attribute name="string">CTC</attribute>
	            </xpath>
	            
	            <xpath expr="//group[@name='main_info']" position="after">
		            <group name="allowance_info" string="Allowance">
						<group>
							<label for="basic_salary" />
							<div class="o_row" name="basic_salary">
								<field name="basic_salary" nolabel="1" />
								<span>/ month</span>
							</div>
							<label for="rent_allowance" />
							<div class="o_row" name="rent_allowance">
								<field name="rent_allowance" nolabel="1" />
								<span>/ month</span>
							</div>
							<label for="transport" />
							<div class="o_row" name="transport">
								<field name="transport" nolabel="1" />
								<span>/ month</span>
							</div>
							<label for="medical_allowance" />
							<div class="o_row" name="medical_allowance">
								<field name="medical_allowance" nolabel="1" />
								<span>/ month</span>
							</div>
						</group>
						<group>
							<label for="special_allowance" />
							<div class="o_row" name="special_allowance">
								<field name="special_allowance" nolabel="1" />
								<span>/ month</span>
							</div>
							<label for="project_allowance" />
							<div class="o_row" name="project_allowance">
								<field name="project_allowance" nolabel="1" />
								<span>/ month</span>
							</div>
							<label for="exgratia" />
							<div class="o_row" name="exgratia">
								<field name="exgratia" nolabel="1" />
								<span>/ month</span>
							</div>
							<label for="gross_salary" />
							<div class="o_row" name="gross_salary">
								<field name="gross_salary" nolabel="1" />
								<span>/ month</span>
							</div>
						</group>
						<group name="mediclaim" string="Deduction">
	                        <label for="mediclaim"/>
	                        <div class="o_row" name="mediclaim">
	                            <field name="mediclaim" nolabel="1"/>
	                            <span>/ month</span>
	                        </div>
                    	</group>
					</group>
					
				</xpath>
	            
	            
	        </field>
	    </record>
	</data>
</odoo>		