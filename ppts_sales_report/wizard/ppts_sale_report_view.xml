<odoo>

    <!-- Form View -->
    <record id="ppts_sale_report_form" model="ir.ui.view">
        <field name="name">ppts.sale.report.form</field>
        <field name="model">ppts.sale.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="all_partner"/>
                        <field name="partner_ids" widget="many2many_tags"
                               attrs="{'invisible':[('all_partner','=',True)],'required':[('all_partner','!=',True)]}"/>
                        <label for="date_from" string="Date Range"/>
                        <div class="o_row">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </div>
                    </group>
                    <p><label string="States" style="padding-right:108px"/>
                        <span style="padding-right:8px">Paid</span>
                        <field name="paid_state" style="width:30px !important" class="oe_inline"/>
                        <span style="padding-right:8px">Open</span>
                        <field name="open_state" style="width:30px !important" class="oe_inline"/>
                        <span style="padding-right:8px">Cancel</span>
                        <field name="cancel_state" class="oe_inline"/>
                    </p>
                </sheet>
                <footer>
                    <div>
                        <label for='xl_file' attrs="{'invisible': [('xl_file', '=', False)]}"/>
                        <field name="xl_file" readonly="1" filename="xl_name" style="margin-left:15px"/>
                        <field name="xl_name" invisible="1"/>
                        <button name="cancel" string="Cancel" special="cancel"
                                class="oe_link" style="float:right"/>
                        <button name="generate_xl_report" class="oe_highlight"
                                type="object" string="Generate Report" style="float:right;margin-right:5px"/>
                        <button name="preview_report" class="oe_highlight"
                                type="object" string="Preview" style="float:right;margin-right:5px"/>
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action View -->
    <record id="ppts_sale_report_action" model="ir.actions.act_window">
        <field name="name">Sales Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ppts.sale.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="ppts_sale_report_form"/>

    </record>
</odoo>
	