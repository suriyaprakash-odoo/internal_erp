        </record>


        <record id="action_open_website_crm_2" model="ir.actions.act_url">
            <field name="name">Lead Form 2</field>
            <field name="target">self</field>
            <field name="url">/lead_form_2</field>
        </record>


        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="action_open_website_crm_2"/>
            <field name="state">open</field>
        </record>

