        <record id="menu_crm_nurture" model="website.menu">
            <field name="name">Leads</field>
            <field name="url">/lead_form</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">15</field>
        </record>

		<record id="menu_crm_nurture_sub_1" model="website.menu">
            <field name="name">Leads form</field>
            <field name="url">/lead_form</field>
