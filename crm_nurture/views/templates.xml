								</div>
							</div>
						</form>
						<script>
							$(document).ready(function(){
								$("#submit_btn").click(function(){
									email=$("#prospect_mail_id").val();
									arr = email.split('@');
									if (arr[1].indexOf(".") >= 0){
									}else{
										alert("Please enter a valid Email address");
										return false;
									}
								});
							});
						</script>
					</section>
				</div>
			</t>
		</template>
	</data>
</odoo>
