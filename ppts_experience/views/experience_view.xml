<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="hr_experience_academic_form_view" model="ir.ui.view">
		<field name="name">HR Experience Academic</field>
		<field name="model">hr.experience.academics</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="employee" />
							<field name="course" />
							<field name="degree" />
							<field name="major" />
						</group>
						<group>
							<field name="year_from" />
							<field name="year_to" />
							<field name="percentage" />
							<field name="institute" />
							<field name="location" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="hr_experience_academic_tree_view" model="ir.ui.view">
		<field name="name">HR Experience Academic</field>
		<field name="model">hr.experience.academics</field>
		<field name="arch" type="xml">
			<tree string="HR Experience Academics">
				<field name="employee" />
				<field name="course" />
				<field name="degree" />
				<field name="major" />
				<field name="year_from" />
				<field name="year_to" />
				<field name="percentage" />
				<field name="institute" />
				<field name="location" />
				<!-- <field name="field_of_study" />
				<field name="year_of_passing" /> -->
			</tree>
		</field>
	</record>

	<record id="action_hr_experience_academic_view" model="ir.actions.act_window">
		<field name="name">HR Experience Academic</field>
		<field name="res_model">hr.experience.academics</field>
		<field name="view_mode">tree,form</field>
	</record>

	<record id="hr_experience_professional_form_view" model="ir.ui.view">
		<field name="name">HR Experience Professional</field>
		<field name="model">hr.experience.professional</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="employee" />
							<field name="position" />
							<field name="organization" />
						</group>
						<group>
							<field name="start_date" />
							<field name="end_date" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="hr_experience_professional_tree_view" model="ir.ui.view">
		<field name="name">HR Experience Professional</field>
		<field name="model">hr.experience.professional</field>
		<field name="arch" type="xml">
			<tree string="HR Experience Professional">
				<field name="employee" />
				<field name="position" />
				<field name="organization" />
				<field name="start_date" />
				<field name="end_date" />
				<field name="salary" />
				<field name="change_reason" />
			</tree>
		</field>
	</record>

	<record id="action_hr_experience_professional_view" model="ir.actions.act_window">
		<field name="name">HR Experience Professional</field>
		<field name="res_model">hr.experience.professional</field>
		<field name="view_mode">tree,form</field>
	</record>

	<record id="hr_experience_certification_form_view" model="ir.ui.view">
		<field name="name">HR Experience Certification</field>
		<field name="model">hr.experience.certification</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="employee" />
							<field name="certifications" />
							<field name="issued_by" />
							<field name="state_issued_id" />
							<!-- <field name="certification_number" /> -->
						</group>
						<group>
							<field name="start_date" />
							<field name="end_date" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="hr_experience_certification_tree_view" model="ir.ui.view">
		<field name="name">HR Experience Certification</field>
		<field name="model">hr.experience.certification</field>
		<field name="arch" type="xml">
			<tree string="HR Experience Certification">
				<field name="employee" />
				<field name="certifications" />
				<!-- <field name="certification_number" /> -->
				<field name="issued_by" />
				<field name="state_issued_id" />
				<field name="start_date" />
				<field name="end_date" />
			</tree>
		</field>
	</record>

	<record id="action_hr_experience_certification_view" model="ir.actions.act_window">
		<field name="name">HR Experience Certification</field>
		<field name="res_model">hr.experience.certification</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem name="Experience" id="menu_hr_experience_sub"
		parent="hr.menu_human_resources_configuration" sequence="1" />
	<menuitem name="Academic Experience" id="menu_hr_experience_academic_sub"
		parent="menu_hr_experience_sub" action="action_hr_experience_academic_view"
		sequence="1" />
	<menuitem name="Professional Experience" id="menu_hr_experience_professional_sub"
		parent="menu_hr_experience_sub" action="action_hr_experience_professional_view"
		sequence="2" />
	<menuitem name="Certification" id="menu_hr_experience_certification_sub"
		parent="menu_hr_experience_sub" action="action_hr_experience_certification_view"
		sequence="3" />
</odoo>