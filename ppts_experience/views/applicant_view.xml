<?xml version="1.0" encoding="utf-8" ?>
<odoo>

	<record id="view_applicant_form_inherited_experience" model="ir.ui.view">
		<field name="name">hr.applicant.form</field>
		<field name="model">hr.applicant</field>
		<field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job" />
		<field name="arch" type="xml">
			<field name="availability" position="after">
				<field name="academic_info_dict" invisible="1" />
				<field name="professional_info_dict" invisible="1" />
				<field name="certification_info_dict" invisible="1" />
				<field name="references_info_dict" invisible="1" />
			</field>
			<field name="company_id" position="after">
				<field name="job_id_country_id" invisible='1'/>
			</field>	

			<xpath expr="//field[@name='description']" position="before">
				<!-- <separator string="Application Summary" />	 -->
				<field name="applicant_summary" />
			</xpath>

			<xpath expr="//field[@name='description']" position="attributes">	
				<attribute name="invisible">1</attribute>
			</xpath>	

			<xpath expr="/form/sheet/group" position="after">
				<notebook>
					<page string="Experience">
						<group string="Academic Experience">
						</group>
							<field name="applicant_academic_experience_ids">
								<tree editable="bottom">
									<field name="degree" />
									<field name="field_of_study" />
									<field name="institute" />
									<field name="percentage" />
									<field name="year_of_passing" />
								</tree>
							</field>
						<group string="Professional Experience">
						</group>
							<field name="applicant_professional_experience_ids">
								<tree editable="bottom">
									<field name="position" />
									<field name="organization" />
									<field name="start_date" />
									<field name="end_date" />
								</tree>
							</field>
						<group string="Certifications">
						</group>
							<field name="applicant_certification_experience_ids" context="{'default_country_id': job_id_country_id}">
								<tree editable="bottom" >
									<field name="certifications" />
									<!-- <field name="certification_number" /> -->
									<field name="issued_by" />
									<field name="country_id" invisible='1'/>
									<field name="state_issued_id" domain="[('country_id', '=', country_id)]"/>
									<field name="start_date" />
									<field name="end_date" />
								</tree>
							</field>
					</page>
				</notebook>
			</xpath>
		</field>
	</record>

	<function model="ir.model.fields" name="formbuilder_whitelist">
        <value>hr.applicant</value>
        <value
            eval="[
            	'references_info_dict',
                'academic_info_dict',
                'professional_info_dict',
                'certification_info_dict',
                'tot_exp',
                'relevant_exp',
                'notice_period',
                'lastname',
                'middlename',
                'applicant_summary',
                'applicant_street',
                'p_resi',
                'p_city',
                'permanent_state',
                'p_pin',
                'p_country',
                'present_applicant_street',
                'resi',
                'city',
                'present_state',
                'pin',
                'present_country',
            ]" />
    </function>

</odoo>