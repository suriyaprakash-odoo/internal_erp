<?xml version="1.0" encoding="utf-8" ?>
<odoo>

	<record id="view_employee_form_inherited_experience"
		model="ir.ui.view">
		<field name="name">hr.employee.form</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_form" />
		<field name="arch" type="xml">
			<field name="job_id" position="after">
				<field name="job_country_id" invisible='1' />
			</field>
			<xpath expr="//notebook" position="inside">
				<page string="Academic &#38; Experience">
					<group string="Qualifications">
						<field name="employee_academic_experience_ids" nolabel="1"
							context="{'default_employee': active_id}">
							<tree editable="bottom">
								<field name="course" />
								<field name="degree" />
								<field name="major" />
								<field name="year_from" />
								<field name="year_to" />
								<field name="percentage" />
								<field name="institute" />
								<field name="location" />
								<field name="employee" invisible="1" />
							</tree>
						</field>
					</group>
					<group string="Professional Experience">
						<group>
							<field name="fresher" />
						</group>
						<field name="employee_professional_experience_ids" nolabel="1"
							context="{'default_employee': active_id}" attrs="{'invisible':[('fresher','=',True)]}">
							<tree editable="bottom">
								<field name="position" />
								<field name="organization" />
								<field name="start_date" />
								<field name="end_date" />
								<field name="tenure" />
								<field name="salary" />
								<field name="change_reason" />
								<field name="employee" invisible="1" />
							</tree>
						</field>
					</group>
					<group string="Certifications">
						<field name="employee_certification_experience_ids" nolabel="1"
							context="{'default_country_id': job_country_id}">
							<tree editable="bottom">
								<field name="certifications" />
								<!-- <field name="certification_number" /> -->
								<field name="issued_by" />
								<field name="state_issued_id"
									domain="[('country_id', '=', country_id)]" />
								<!-- <field name="professional_license" /> -->
								<field name="country_id" invisible='1' />
								<field name="start_date" />
								<field name="end_date" />
							</tree>
						</field>
					</group>
				</page>
			</xpath>
		</field>
	</record>


</odoo>