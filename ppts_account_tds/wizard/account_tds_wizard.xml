<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- TDS rate update wizard -->
		<record id="wizard_tds_rate_update_form" model="ir.ui.view">
			<field name="name">account.tds.rate.form</field>
			<field name="model">account.tds.rate</field>
			<field name="arch" type="xml">
				<form string="TDS rate update">
					<group>
						<group>
							<field name="date_from" />
							<label for="tds_percentage"/>
                            <div class="o_row">
                                <field name="tds_percentage" />
                                <span class="o_form_label oe_inline">%</span>
                            </div>
							<field name="tds_exempt_limit" invisible="1"/>
							<field name="sur_percentage" invisible="1"/>
							<field name="sur_exempt_limit" invisible="1"/>
						</group>
					</group>
					<footer>
						<button string='Done' name="Done" type="object" class="btn-primary" />
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		
		<!-- TDS rate update Action -->
		<record id="action_tds_rate_update" model="ir.actions.act_window">
			<field name="name">Tax Rates update</field>
			<field name="res_model">account.tds.rate</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_tds_rate_update_form" />
			<field name="target">new</field>
		</record>

	</data>
</odoo>