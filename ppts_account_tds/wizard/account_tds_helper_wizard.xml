<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- TDS Helper wizard -->
		<record id="wizard_tds_helper_form" model="ir.ui.view">
			<field name="name">tds.helper.form</field>
			<field name="model">tds.helper</field>
			<field name="arch" type="xml">
				<form string="TDS Helper">
					<group>
						<group>
							<field name="company_id" />
							<field name="date" />
							<field name="journal_id" />
						</group>
						<group>
							<field name="tds_section_id" />
							<field name="partner_id" />
						</group>
					</group>
					<footer>
						<button string='Create payment voucher' name="create_payment" type="object" class="btn-primary" />
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		
		<!-- TDS Helper Action -->
		<record id="action_tds_helper" model="ir.actions.act_window">
			<field name="name">Generate Payment</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">tds.helper</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_tds_helper_form" />
			<field name="target">new</field>
		</record>
		
		<!-- <menuitem id="tds_helper_menu" name="TDS Helper" parent="account.menu_finance_entries_actions" 
		sequence="25" action="action_tds_helper" groups="account.group_account_manager"/> -->
		
	</data>
</odoo>