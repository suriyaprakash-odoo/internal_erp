<?xml version="1.0"?>
<odoo>
	<data>
		<record id="view_refuse_reason_update_wizard"
			model="ir.ui.view">
			<field name="name">refuse.reason.update.form</field>
			<field name="model">refuse.reason.update</field>
			<field name="arch" type="xml">
				<form string="Refuse">
					<group>
						<group>
							<field name="name" />
						</group>
						<group></group>
					</group>
					<footer>
						<button name="update_refuse_reason" type="object"
							string="Save" class="oe_highlight" />
						or
						<button name="cancel" string="Close" special="cancel"
							class="oe_link" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_view_refuse_wizard"
			model="ir.actions.act_window">
			<field name="name">Reason for Cancel</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">refuse.reason.update</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_refuse_reason_update_wizard" />
			<field name="target">new</field>
		</record>
	</data>
</odoo>

