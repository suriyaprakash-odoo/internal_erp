	<record id="crm_case_form_view_job_inherit" model="ir.ui.view">
		<field name="name">hr.applicant</field>
		<field name="model">hr.applicant</field>
		<field name="inherit_id" ref="hr_recruitment_survey.crm_case_form_view_job_inherit" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='action_start_survey']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//button[@name='action_print_survey']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//button[@name='action_makeMeeting']" position="after">
                <button name="action_hr_start_survey"
                    class="oe_stat_button"
                    icon="fa-user"
                    type="object"
                    help="Answer related job question" attrs = "{'invisible': [('stage_change_flag', '!=', 'scheduled')]}" >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Start HR</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
                <button name="action_hr_print_survey"
                    class="oe_stat_button"
                    icon="fa-print"
                    type="object"
                    help="Print interview report" attrs = "{'invisible': [('stage_change_flag', 'not in', ('scheduled','man','final'))]}" >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Print HR</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
                <button name="action_tech_start_survey"
                    class="oe_stat_button"
                    icon="fa-user"
                    type="object"
                    help="Answer related job question" attrs = "{'invisible': [('stage_change_flag', '!=', 'tech')]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Start Technical</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
                <button name="action_tech_print_survey"
                    class="oe_stat_button"
                    icon="fa-print"
                    type="object"
                    help="Print interview report" attrs = "{'invisible': [('stage_change_flag', 'not in' , ('tech','man','final'))]}" >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Print Technical</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
                <button name="action_manager_start_survey"
                    class="oe_stat_button"
                    icon="fa-user"
                    type="object"
                    help="Answer related job question" attrs = "{'invisible': [('stage_change_flag', '!=', 'man')]}" >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Start Manager</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
                <button name="action_manager_print_survey"
                    class="oe_stat_button"
                    icon="fa-print"
                    type="object"
                    help="Print interview report" attrs = "{'invisible': [('stage_change_flag', 'not in', ('man','final'))]}" > 
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Print Manager</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
                <button name="action_final_start_survey"
                    class="oe_stat_button"
                    icon="fa-user"
                    type="object"
                    help="Answer related job question" attrs = "{'invisible': [('stage_change_flag', '!=', 'final')]}" >
                    <div class="o_field_widget o_stat_info" >
                        <span class="o_stat_text">Start Final</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
                <button name="action_final_print_survey"
                    class="oe_stat_button"
                    icon="fa-print"
                    type="object"
                    help="Print interview report" attrs = "{'invisible': [('stage_change_flag', '!=', 'final')]}" >
                    <div class="o_field_widget o_stat_info" >
                        <span class="o_stat_text">Print Final</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='survey_id']" position="before">
                <field name="hr_discussion_survey" invisible="1"/>
                <field name="tech_discussion_survey" invisible="1"/>
                <field name="manager_discussion_survey" invisible="1"/>
                <field name="final_discussion_survey" invisible="1"/>
                <field name="hr_response_id" invisible="1"/>
                <field name="tech_response_id" invisible="1"/>
                <field name="man_response_id" invisible="1"/>
                <field name="final_response_id" invisible="1"/>
            </xpath>
		</field>
	</record>		
		
		
	<record id="hr_applicant_template_inheirted_view" model="ir.ui.view">
		<field name="name">hr.applicant</field>
		<field name="model">hr.applicant</field>
		<field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job" />
		<field name="arch" type="xml">

			<xpath expr="//button[@name='action_makeMeeting']" position="before">
				<button name="action_applicant_schedule_send" class="oe_stat_button" icon="fa fa-calendar-plus-o" type="object" help="Schedule interview with this applicant" attrs = "{'invisible': [('stage_change_flag', '!=', 'new')]}">
	                <div class="o_field_widget o_stat_info">
	                    <span class="o_stat_text">Next Schedule</span>
	                 </div>
	            </button> 
        	</xpath>

			<xpath expr="//notebook/page[1]" position="after">
				<page string="Personal Information">
				<group>
				<group>
					<field name="sex_type" string="SEX" invisible="1"/>
					<field name="gender_type" string="Sex" invisible="1"/>
					<field name="date_birth"/>
					<field name="age"/>
					<field name="age_year" invisible="1"/>
					<label for="permanent_address" string="Permanent Address"/>
	                            <div class="o_address_format">
	                                <field name="applicant_street" placeholder="Street..." class="o_address_street"/>
	                                <field name="p_resi" placeholder="Street 2..." class="o_address_street"/>
	                                <field name="p_city" placeholder="City" class="o_address_city"/>
	                                <field name="permanent_state" class="o_address_state" placeholder="State" options='{"no_open": True}'/>                         
	                                <field name="p_pin" placeholder="Pincode" class="o_address_zip"/>
	                                <field name="p_country" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>                      
	                            </div>
	                             <field name="p_tel_no"/>
								<field name="p_mobile"/>
	                            <field name="p_e_mail"/>
					<field name="status_type"/>
					<field name="applicant_lang_ids" widget="one2many">
					<tree editable="bottom"  string="Language">
					    <field name="lang_id" />
						<field name="check_box1" />
						<field name="check_box2" />
						<field name="check_box3" />			
					</tree>
					</field>
					</group>
					<group>
					<field name="so_channel" invisible="1"/>
					<field name="name_so" invisible="1"/>
					<field name="present_check"/>
					<label for="present_address" string="Present Address" attrs="{'invisible': [('present_check', '=',  True)]}"/>
	                            <div class="o_address_format">
	                                <field name="present_applicant_street" placeholder="Street..." class="o_address_street" attrs="{'invisible': [('present_check', '=',  True)]}"/>
	                                <field name="resi" placeholder="Street 2..." class="o_address_street"  attrs="{'invisible': [('present_check', '=',  True)]}"/>
	                                <field name="city" placeholder="City" class="o_address_city"  attrs="{'invisible': [('present_check', '=',  True)]}"/>
	                                <field name="present_state" class="o_address_state" placeholder="State" options='{"no_open": True}' attrs="{'invisible': [('present_check', '=',  True)]}"/>                                                  
	                                <field name="pin" placeholder="Pincode" class="o_address_zip"  attrs="{'invisible': [('present_check', '=',  True)]}"/>        
	                                <field name="present_country" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'invisible': [('present_check', '=',  True)]}"/>                      
	                      
	                      </div>
	                 				<!-- <field name="tel_no" attrs="{'invisible': [('present_check', '=',  True)]}"/> -->
	                 				<field name="tel_no" invisible="1"/>
									<field name="mobile" attrs="{'invisible': [('present_check', '=',  True)]}"/>
	                                <field name="e_mail" attrs="{'invisible': [('present_check', '=',  True)]}"/>     				
					</group>
					<label for="family_history" string="Family History" />				
					<field name="applicant_detail_ids" widget="one2many">
					<tree editable="bottom"  string="Family">
					 <field name="name" />
					    <field name="relationship_applicant" />
						<field name="date" />
						<field name="occupation" />
						<field name="annual_income" />			
					</tree>
					</field>				
					</group>
				</page>
			</xpath>		
			<xpath expr="//field[@name='email_from']" position="before">
				<field name="applicant_applied" invisible="1"/>
			</xpath>

			<!-- <xpath expr="//field[@name='partner_phone']" position="replace">
				<field name="partner_phone" string="Primary Number"/>
			</xpath> -->
			<xpath expr="//field[@name='partner_phone']" position="attributes">
	            <attribute name="string">Primary Number</attribute>
	        </xpath>
	        <xpath expr="//field[@name='partner_mobile']" position="attributes">
	            <attribute name="string">Secondary Number</attribute>
	        </xpath>

			<xpath expr="//field[@name='availability']" position="after">
				<field name="negotiate"/>
				<field name="shift_time"/>
				<field name="selected_days"/>
			</xpath>
			<xpath expr="//notebook/page[2]" position="after">
				<page string="Work History">
				<field name="applicant_work_ids" widget="one2many">
					<tree editable="bottom" create='false' string="Family">
					 <field name="doc_name" />
					    <field name="last_job" />
						<field name="present_job" invisible="1"/>
						<field name="second_job" />
						<field name="sec_last_job" invisible="1"/>
						<field name="third_job" />
						<field name="th_last_job" invisible="1"/>	
						<field name="fourth_job" />	
						<field name="four_last_job" invisible="1"/>	
						<field name="fifth_job" />	
						<field name="fif_last_job" invisible="1" />				
					</tree>
					</field>
				<label for="reference_details" string="References: (Please give details of 2 persons of your current organization[HR,TL,Managers]. Relations and friends cannot be referred) " />
				<field name="applicant_reference_ids" widget="one2many">
					<tree editable="bottom"  string="Family">
					 <field name="name" />
					    <field name="relationship_app" />
						<field name="no_years" />
						<field name="occupation" />
						<field name="address_details" />
						<field name="phone_no" />			
					</tree>
					</field>
				
				</page>
			</xpath>				
		</field>
	</record> 		
	
	<record id="email_compose_message_wizard_form_inherit" model="ir.ui.view">
		<field name="name">mail.compose.message.form.inherit</field>
		<field name="model">mail.compose.message</field>
		<field name="inherit_id" ref="mail.email_compose_message_wizard_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='subject']" position="after">
				<field name="applicant" invisible="1"/>
				<field name="activity_type_id" attrs="{'invisible': [('applicant', '!=', True)],'required': [('applicant', '=', True)]}"/>
				<field name="schedule_date" attrs="{'invisible': [('applicant', '!=', True)],'required': [('applicant', '=', True)]}"/>
			</xpath>
		</field>
	</record>

	</data>
</odoo>