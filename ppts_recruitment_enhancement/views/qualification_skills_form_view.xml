<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="recruitment_qualification_tree" model="ir.ui.view">
			<field name="name">hr.qualification.line.tree</field>
			<field name="model">hr.qualification.line</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Qualification">
					<field name="name" />
					<field name="code" />
				</tree>
			</field>
		</record>
		<record id="recruitment_qualification_form" model="ir.ui.view">
			<field name="name">hr.qualification.line.form</field>
			<field name="model">hr.qualification.line</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Qualification">
					<sheet>
						<group>
							<group>
								<field name="name" />
							</group>
							<group>
								<field name="code" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window"
			id="action_view_qualification_form_id">
			<field name="name">Qualification</field>
			<field name="res_model">hr.qualification.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>


