<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Crm Product -->

	<record id="crm_case_form_view_oppor_inherit_product" model="ir.ui.view">
		<field name="name">crm.lead.oppor.inherited</field>
		<field name="model">crm.lead</field>
		<field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
		<field name="arch" type="xml">
			<xpath expr="//page[@name='lead']" position="after">
				<page string="Products">
					<field name="lead_product_ids">
						<tree editable="bottom">
							<field name="product_id" />
							<field name="description" invisible="1" />
							<field name="qty" />
							<field name="product_uom" />
							<field name="price_unit" />
						</tree>
					</field>
				</page>
			</xpath>
		</field>
	</record>

	<record id="crm_case_form_view_lead_inherit_product" model="ir.ui.view">
		<field name="name">crm.lead.inherited</field>
		<field name="model">crm.lead</field>
		<field name="inherit_id" ref="crm.crm_case_form_view_leads" />
		<field name="arch" type="xml">
			<xpath expr="//page[@name='extra']" position="after">
				<page string="Products">
					<field name="lead_product_ids">
						<tree editable="bottom">
							<field name="product_id" />
							<field name="description" invisible="1" />
							<field name="qty" />
							<field name="product_uom" />
							<field name="price_unit" />
						</tree>
					</field>
				</page>
			</xpath>
		</field>
	</record>

	<record id="sale_crm.crm_case_form_view_oppor_inherit" model="ir.ui.view">
		<field name="name">crm.lead.oppor.inherited</field>
		<field name="model">crm.lead</field>
		<field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor" />
		<field name="arch" type="xml">
			<xpath expr="//button[1]" position="replace">
				<button string="New Quotation" name="%(sale_crm.sale_action_quotations_new)d"
					type="action" class="oe_highlight"
					context="{'search_default_partner_id': partner_id,
					           'default_partner_id': partner_id, 
					           'default_team_id': team_id,
					           'default_opportunity_id': active_id}" />
			</xpath>
		</field>
	</record>

</odoo>   