		<menuitem name="Hire" id="menu_hire" parent="menu_onboarding"
			action="action_offer_accepted_view" sequence="1" />
		<!-- <menuitem name="Direct Hire" id="menu_direct_hire" parent="menu_hire" 
			action="action_direct_hire_view" sequence="1" /> -->
		<menuitem name="Offer Accepted" id="menu_offer_accepted"
			parent="menu_hire" action="action_offer_accepted_view" sequence="2" />
		<menuitem name="Backgroung Check" id="menu_background_check"
			parent="menu_hire" action="action_background_check_view" sequence="3" />
		<menuitem name="To Approve" id="menu_to_approve"
			parent="menu_hire" action="action_to_approve_view" sequence="4" />
		<menuitem name="Contract" id="menu_contract"
			parent="menu_hire" action="action_contract_view" sequence="5" />
