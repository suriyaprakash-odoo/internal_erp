				<tree string="hr.employee.onboarding">
					<field name="name" />
					<field name="phone" />
					<field name="applied_job" />
					<field name="start_date" />
					<field name="emp_status" />
					<field name="expected_salary" />
					<field name="contract_type" />
					<field name="available" />
				</tree>
			</field>
		</record>

		<record id="hr_onboarding_tree_state_view" model="ir.ui.view">
			<field name="name">HR Onboarding</field>
			<field name="model">hr.employee.onboarding</field>
			<field name="arch" type="xml">
				<tree string="hr.employee.onboarding" create="false"
					edit="false">
					<field name="name" />
					<field name="phone" />
					<field name="applied_job" />
					<field name="start_date" />
					<field name="emp_status" />
					<field name="expected_salary" />
					<field name="contract_type" />
