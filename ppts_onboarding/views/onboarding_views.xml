			<field name="view_mode">tree,form</field>
			<field name="domain">[('benefits_states','=','pending')]</field>
			<field name="context">{}</field>
			<field name="view_id" ref="hr_onboarding_tree_state_view" />
		</record>

		<record id="action_benifits_in_progress_view" model="ir.actions.act_window">
			<field name="name">In Progress</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.onboarding</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('benefits_states','=','progress')]</field>
