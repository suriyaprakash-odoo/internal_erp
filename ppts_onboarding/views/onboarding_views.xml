		<record id="action_benifits_complete_view" model="ir.actions.act_window">
			<field name="name">Completed</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.onboarding</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('benefits_states','=','complete')]</field>
			<field name="context">{}</field>
			<field name="view_id" ref="hr_onboarding_tree_state_view" />
		</record>
