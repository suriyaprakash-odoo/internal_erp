		<record id="action_direct_hire_view"
			model="ir.actions.act_window">
			<field name="name">Direct Hire</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.onboarding</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<!-- <field name="domain">[('state_id','=','complete')]</field> -->
			<field name="context">{}</field>
			<field name="view_id" ref="hr_onboarding_tree_view" />
		</record>

		<record id="action_offer_accepted_view"
			model="ir.actions.act_window">
			<field name="name">Offer Accepted</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.onboarding</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('state_id','=','offer')]</field>
			<field name="context">{}</field>
			<field name="view_id" ref="hr_onboarding_tree_state_view" />
		</record>

		<record id="action_background_check_view"
			model="ir.actions.act_window">
			<field name="name">Background Check</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.onboarding</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('state_id','=','background')]</field>
			<field name="context">{}</field>
			<field name="view_id" ref="hr_onboarding_tree_state_view" />
		</record>

		<record id="action_to_approve_view"
			model="ir.actions.act_window">
			<field name="name">TO Approve</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.onboarding</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('state_id','=','to_approve')]</field>
			<field name="context">{}</field>
			<field name="view_id" ref="hr_onboarding_tree_state_view" />
		</record>

		<record id="action_contract_view" model="ir.actions.act_window">
			<field name="name">Contract</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.onboarding</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('state_id','=','contract')]</field>
			<field name="context">{}</field>
			<field name="view_id" ref="hr_onboarding_tree_state_view" />
		</record>

		<record id="action_complete_view" model="ir.actions.act_window">
			<field name="name">Complete</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.onboarding</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('state_id','=','complete')]</field>
			<field name="context">{}</field>
			<field name="view_id" ref="hr_onboarding_tree_state_view" />
		</record>

		<record id="action_benifits_pending_view" model="ir.actions.act_window">
			<field name="name">Pending</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.onboarding</field>
