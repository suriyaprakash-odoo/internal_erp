<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--Email template -->
		<record id="template_welcome_mail" model="mail.template">
			<field name="name">Welcome Mail</field>
			<field name="email_from">${user.email}</field>
			<field name="subject">Welcome Mail</field>
			<field name="email_to">${object.mail}</field>
			<field name="model_id"
				ref="ppts_onboarding.model_hr_employee_onboarding" />
			<field name="body_html"><![CDATA[
		  	<strong>Welcome Mail</strong>
				]]></field>
		</record>

		<record id="onboarding_launch_pack" model="mail.template">
			<field name="name">Onboarding Launch</field>
			<field name="subject">Launch Package And Personal Information Document
			</field>
			<field name="email_from">${ctx['email_from']|safe}</field>
			<field name="email_to">${ctx['email_to']|safe}</field>
			<field name="model_id"
				ref="website_sign.model_signature_request" />
			<field name="auto_delete" eval="False" />
			<field name="body_html">
                <![CDATA[
                    <div style="line-height: 20px;font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
                    <p>Dear ${ctx['partner_name']}</p>

                    <p>Welcome to Onboarding process.Please sign the document found below.</p>

                        <div style="width:90%; max-width:600px; margin:auto; font-size:10pt; padding:20px 0; font-family:'Lato', serif;">
                            <div style="background-color:#EFEDED; padding: 20px;">
                                % if ctx['template_type'] == "request":
                                    This template consists of some required fields, which is mandatory to be filled. So kindly fill up this form with necessary information. ${ctx['email_from_usr']} (<a href="mailto:${ctx['email_from']}?subject=Re: ${ctx['subject']|safe}" style="color:#428BCA; text-decoration:none;" target="_blank">${ctx['email_from_mail']}</a>) has requested your signature on this document :
                                % endif
                                % if ctx['template_type'] == "follower":
                                    ${ctx['email_from_usr']} (<a href="mailto:${ctx['email_from']}?subject=Re: ${ctx['subject']|safe}" style="color:#428BCA; text-decoration:none;" target="_blank">${ctx['email_from_mail']}</a>) has added you as a Follower of this Signature Request :
                                % endif
                                % if ctx['template_type'] == "completed":
                                    This docs has been completed and signed by everyone :
                                % endif

                                <h1 style="font-size:1.25em; margin:15px 0 25px 0;">${object['reference']}</h1>
                                
                                <div style="margin:0 -15px">
                                    <a style="float:left; display:inline-block; margin:0 15px 10px 15px; padding:5px 10px; border-radius: 3px; background-color:#5C6ED0; text-align:center; text-decoration:none; color:#F7FBFD;" href=${ctx['link']}>
                                        % if ctx['template_type'] == "request":
                                            Sign Document Now
                                        % endif
                                        % if ctx['template_type'] == "follower":
                                            View Signature Request
                                        % endif
                                        % if ctx['template_type'] == "completed":
                                            View Signed Document
                                        % endif
                                    </a>
                                    
                                    <div style="font-size:0.8em; color:#999999; margin:0 15px 10px 15px">
                                        % if ctx['template_type'] == "request":
                                            <strong style="font-weight:bold; color:black;">Warning: do not forward this email to other people!</strong><br/>
                                            They will be able to access this document and sign it as yourself.
                                        % endif
                                        % if ctx['template_type'] == "follower":
                                            You will be notified once the document has been signed by everyone involved.
                                        % endif
                                    </div>
                                    <div style="clear:both;"/>
                                </div>
                                
                                % if ctx['msgbody']:
                                <div style="background-color:white; padding:10px;">
                                    ${ctx['msgbody']|safe}
                                </div>
                                % endif
                            </div>
                            
                            <div style="font-size:0.8em; margin-top:10px;">
                                <span style="color:#428BCA;">Sent with <strong style="font-weight:bold;">Odoo Sign</strong></span>
                            </div>
                        </div>

                    <p>Best Regards,</p>
                    <p>Ppts HR Team</p>
                    </div>
                ]]>
			</field>
		</record>

        <record id="email_template_bgv_survey" model="mail.template">
            <field name="name">Survey - Send by Email</field>
            <field name="subject">Background Verification</field>
            <field name="email_from">hr@pptservices.com</field>
            <field name="email_to">${object.email}</field>
            <field name="model_id" ref="ppts_onboarding.model_background_verification" />
            <field name="auto_delete" eval="False" />
            <field name="body_html">
                <![CDATA[
                    <p>Hi Team,</p>
                    <p>Greetings of the Day!</p>
                    <p>We kindly request you to provide the Background verification of your Ex Employee  ${object.bgv_info_id.name}</p>
                    <br/>
                     % if ctx['survey_link']:
                        % for aline in ctx['survey_link']:
                            <a style="margin-left: 85px; padding:5px 10px; border-radius: 3px; background-color:#875A7B; text-align:center; text-decoration:none; color:#F7FBFD;" href=${aline}>Please, click here to start survey</a>
                        % endfor
                    % endif
                    <p>Thanks for your participation!</p>
                ]]>
            </field>
        </record>

	</data>
</odoo>